        <Menu HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="410" Background="#FFBBB4B4">
            <Label Content="Cadastrar Devolução de Empréstimo:" Height="24" RenderTransformOrigin="0.492,0."/>
        </Menu>
        <Label Content="Buscar Cliente:" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top"/>
