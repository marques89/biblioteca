        <Label Content="Empréstimo:" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbxEmprestimoCliente" HorizontalAlignment="Left" Margin="124,95,0,0" VerticalAlignment="Top" Width="150" TabIndex="3"/>
